<?xml version="1.0" encoding="UTF-8" ?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
	<meta>
		<author>Sebastian Spier (http://twitter.com/#!/sebastianspier/)</author>
		<description></description>
	  <documentationURL>http://support.berlin.de/wiki/index.php/SimpleSearch_API</documentationURL>
		<sampleQuery>SELECT * FROM {table} '</sampleQuery>		
	</meta>
	<bindings>

		<select itemPath="json.index" produces="JSON">
			<!-- 
				http://www.berlin.de/sen/finanzen/haushalt/zuwendungen/index.php?
				q=krank
				&politikbereich=Gesundheit
				&jahr=
				&q_geo=
				&name=
				&art=
				&anschrift=
				&geber=
				&zweck=#results 
				http://www.berlin.de/sen/finanzen/haushalt/zuwendungen/index.php?q=krank&politikbereich=Gesundheit&jahr=--+Alles+--&q_geo=&name=&art=--+Alles+--&anschrift=&geber=--+Alles+--&zweck=&page=2&order=#results
				
			-->
			<urls>
      	<url env="all">http://www.berlin.de/sen/finanzen/haushalt/zuwendungen/index.php/index/index.json</url>
      </urls>
			<paging model="page">
				<start id="page" default="1" />
				<pagesize id="per_page" max="100" /> <!-- actually I am not sure if this works -->
				<total default="10" />
			</paging>
	    <inputs>
				<key id="q" as="query" type="xs:string" paramType="query" required="true"/>

				<key id="politikbereich" as="year" type="xs:string" paramType="query" />
				<key id="jahr" as="year" type="xs:string" paramType="query" />
				<key id="q_geo" type="xs:string" paramType="query" />
				<key id="name" type="xs:string" paramType="query" />
				<key id="art" type="xs:string" paramType="query" />
				<key id="anschrift" type="xs:string" paramType="query" />
				<key id="geber" type="xs:string" paramType="query" />
				<key id="zweck" type="xs:string" paramType="query" />
	     </inputs>
    	</select>

  	</bindings>
</table>