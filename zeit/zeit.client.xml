<?xml version="1.0" encoding="UTF-8" ?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
  <meta>
    <author>Sebastian Spier (http://twitter.com/#!/sebastianspier/)</author>
    <description>ZEIT ONLINE Content API</description>
    <documentationURL>http://developer.zeit.de/docs/</documentationURL>
    <sampleQuery>SELECT * FROM {table}</sampleQuery>
  </meta>
  <bindings>

    <select itemPath="json" produces="JSON">
      <urls>
        <url env="all">http://api.zeit.de/client</url>
      </urls>
      <inputs>
        <key id="X-Authorization" as="api_key" type="xs:string" paramType="header" required="true"/>
      </inputs>
    </select>

  </bindings>
</table>