<?xml version="1.0" encoding="UTF-8" ?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd" https="true">
	<meta>
		<author>Sebastian Spier</author>
		<description>Socrata API</description>
	   	<documentationURL>http://opendata.socrata.com/api/docs/views</documentationURL>
		<sampleQuery>SELECT * FROM {table} </sampleQuery>		
	</meta>
	<bindings>
		<select itemPath="json" produces="XML">
			<urls>
				<url env="all">https://opendata.socrata.com/api/views.json</url>
			</urls>
			<paging model="page">
				<start id="page" default="1" />
				<pagesize id="limit" max="200" />
				<total default="10" />
			</paging>
			<inputs>
				<!-- <key id="indicator_id" type="xs:string" paramType="path" required="true"/>
				<key id="region_code" type="xs:string" paramType="path" required="true"/>
				<key id="from_year" type="xs:string" paramType="path" default="1960" />
				<key id="to_year" type="xs:string" paramType="path" default="2010" /> -->
			</inputs>
    </select>
  </bindings>
</table>